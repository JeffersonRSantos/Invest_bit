  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "./"
  },
  "include": ["src/**/*", "core/**/*"]
}
